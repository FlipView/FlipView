<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1" >

    <TextView
        android:id="@+id/big_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="大页大页大页2222222222222222222222222222222222222222222222"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#ff00ff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <com.aphidmobile.flip.FlipViewController
            xmlns:flip="http://schemas.android.com/apk/res-auto"
            android:id="@+id/flip_controller1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            flip:orientation="vertical" />

        <com.aphidmobile.flip.FlipViewController
            xmlns:flip="http://schemas.android.com/apk/res-auto"
            android:id="@+id/flip_controller2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            flip:orientation="vertical" />
    </LinearLayout>

</FrameLayout>